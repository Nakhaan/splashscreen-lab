{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "splashscreen-lab",
  "version": "0.0.7",
  "identifier": "splashscreen-lab",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen.html",
        "decorations": false,
        "resizable": false,
        "center": true,
        "width": 500,
        "height": 300,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc4RjA0RjgwNENEN0E3QzgKUldUSXA5ZE1nRS93ZUxORWtobFhDNlZWcFIrK3NCTk5hSFM0a083WVNZZWlNcFpIYWh3NTNVV1cK",
      "endpoints": [
        "https://raw.githubusercontent.com/Nakhaan/splashscreen-lab/main/latest.json"
      ]
    }
  }
}
